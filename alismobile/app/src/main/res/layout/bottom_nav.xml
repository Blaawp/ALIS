<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/topNav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#1E89CF"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/homeNav"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:padding="8dp"
            android:clickable="true" />

        <ImageView
            android:id="@+id/exploreNav"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/compass"
            android:padding="8dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bookNav"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/book"
            android:padding="8dp"
            android:clickable="true"/>



    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/selectLine"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:background="#1E89CF"
        app:layout_constraintTop_toBottomOf="@id/topNav"
        >
        <View
            android:id="@+id/selectHome"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/select_color"
            android:layout_weight="1"
            />
        <View
            android:id="@+id/selectExplore"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            />
        <View
            android:id="@+id/selectBook"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
