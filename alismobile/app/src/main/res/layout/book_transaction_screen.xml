<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EEEE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/date" />

        <TextView
            android:id="@+id/date_circulation_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="April 30 2023"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="359dp"
        android:layout_height="511dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.514">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/book_card_circulation_screen"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corner_white_ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/book_card_image_circulation_screen"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/book_card_title_circulation_screen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="When Blood Meets Earth"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/book_card_image_circulation_screen"
                app:layout_constraintTop_toTopOf="@+id/book_card_image_circulation_screen" />

            <TextView
                android:id="@+id/book_card_author_circulation_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="E.A Noble"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/book_card_image_circulation_screen"
                app:layout_constraintTop_toBottomOf="@+id/book_card_title_circulation_screen" />

            <TextView
                android:id="@+id/book_card_synopsis_circulation_screen"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse iaculis fermentum sapien vitae condimentum. Pellentesque commodo efficitur accumsan."
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/book_card_image_circulation_screen"
                app:layout_constraintTop_toBottomOf="@+id/book_card_author_circulation_screen" />

            <TextView
                android:id="@+id/book_card_borrowed_title_circulation_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Borrowed On:"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/book_card_image_circulation_screen"
                app:layout_constraintTop_toBottomOf="@+id/book_card_synopsis_circulation_screen" />

            <TextView
                android:id="@+id/book_card_borrowed_circulation_screen"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="April 30, 2023"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/book_card_image_circulation_screen"
                app:layout_constraintTop_toBottomOf="@+id/book_card_borrowed_title_circulation_screen" />

            <TextView
                android:id="@+id/book_card_return_title_circulation_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="Return On:"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/book_card_borrowed_title_circulation_screen"
                app:layout_constraintTop_toBottomOf="@+id/book_card_synopsis_circulation_screen" />

            <TextView
                android:id="@+id/book_card_return_circulation_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:text="May 5, 2023"
                android:textColor="#EE251C"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/book_card_borrowed_circulation_screen"
                app:layout_constraintTop_toBottomOf="@+id/book_card_return_title_circulation_screen" />

            <TextView
                android:id="@+id/category_circulation_screen"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner_purple_4c42e8"
                android:gravity="center"
                android:text="Fiction"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/book_card_title_circulation_screen" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>