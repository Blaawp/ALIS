<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/toptop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0072C6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.cardview.widget.CardView
            android:id="@+id/rounded_square"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="-100dp"
            app:cardBackgroundColor="#DCD414"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintBounds">

            <!-- Contents of Yellow Box -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical"
                android:padding="5dp">
                <!-- Log in Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:text="Login Now"
                    android:textColor="#006EB7"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <!-- Student Number Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Number"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="-3dp"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbg"
                    android:hint="Username"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="4dp" />

                <!-- Password Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="-3dp"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbg"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="4dp" />

                <!-- Forget Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:text="Forget Password"
                    android:textColor="#006EB7"
                    tools:ignore="TouchTargetSizeCheck" />
                <!-- Login Button -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:background="@drawable/loginbuttonbg"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="125dp"
                android:text="Â©2023 ALIS, Wala"
                android:textColor="#2E2C3E" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:alpha="0.9"
            app:layout_constraintBottom_toTopOf="@id/rounded_square"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="-25dp"
            android:elevation="8dp"
            app:cardCornerRadius="65dp">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"/>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stibackground"
            android:scaleType="centerCrop"
            android:alpha="0.7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>